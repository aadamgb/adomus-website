    <link rel="stylesheet" href="/style/details.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav id="nav" class="myNavv" >
        <div class="container">
            <img src="/assets/LogoV2.svg" class="logo" alt="logo">
            <ul class="nav-links">
                <li><a href="./calendar">Calendar</a></li>
